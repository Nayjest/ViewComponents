{
    "name": "view-components/view-components",
    "description": "PHP View Components",
    "keywords": [
        "html",
        "view",
        "widgets",
        "presenter",
        "rendering"
    ],
    "homepage": "https://github.com/presentation-framework/presentation-framework",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Vitalii [Nayjest] Stepanenko",
            "email": "mail@vitaliy.in",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "nayjest/manipulator": "^3.0.1",
        "nayjest/tree": "^3",
        "nayjest/collection": "^2.2",
        "danielstjules/stringy": "^1.9|^2.2",
        "container-interop/container-interop": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "4.6.*",
        "filp/whoops": "^1.1.7",
        "vlucas/phpdotenv" : "~1",
        "symfony/var-dumper": "~2",
        "league/uri": "^4",
        "ext-curl": "*"
    },
    "provide": {
      "container-interop/container-interop-implementation": "^1.1"
    },
    "suggest": {
        "league/uri": "Required by Pagination component",
        "symfony/var-dumper": "Required by SymfonyVarDump component"
    },
    "autoload": {
        "psr-4": {
            "ViewComponents\\ViewComponents\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ViewComponents\\ViewComponents\\Test\\": "tests/phpunit",
            "ViewComponents\\ViewComponents\\Demo\\": "tests/webapp"
        }
    },
    "support": {
        "email": "mail@vitaliy.in",
        "source": "https://github.com/presentation-framework/presentation-framework",
        "issues": "https://github.com/presentation-framework/presentation-framework/issues"
    },
    "minimum-stability": "stable"
}
