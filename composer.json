{
    "name": "nayjest/view-components",
    "description": "View Components",
    "keywords": [
        "html",
        "view",
        "widgets"
    ],
    "homepage": "https://github.com/Nayjest/ViewComponents",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Vitalii [Nayjest] Stepanenko",
            "email": "mail@vitaliy.in",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "symfony/property-access" : "~2.5",
        "nayjest/manipulator": "~1.1",
        "danielstjules/stringy": "~1.9"
    },
    "require-dev": {
        "phpunit/phpunit": "4.6.*",
        "filp/whoops": "~1",
        "codeception/codeception": "2.0.*",
        "vlucas/phpdotenv" : "~1",
        "symfony/var-dumper": "~2",
        "ext-curl": "*"
    },
    "suggest": {
        "symfony/var-dumper": "Required for SymfonyVarDump component",
        "symfony/property-access" : "Probably will be used in future"
    },
    "autoload": {
        "psr-4": {
            "Nayjest\\ViewComponents\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nayjest\\ViewComponents\\Test\\": "tests/phpunit",
            "Nayjest\\ViewComponents\\Demo\\": "tests/webapp"
        }
    },
    "support": {
        "email": "mail@vitaliy.in",
        "source": "https://github.com/Nayjest/ViewComponents",
        "issues": "https://github.com/Nayjest/ViewComponents/issues"
    },
    "minimum-stability": "dev"
}
