{
    "name": "presentation/framework",
    "description": "PHP Presentation Framework",
    "keywords": [
        "html",
        "view",
        "widgets",
        "presenter",
        "rendering"
    ],
    "homepage": "https://github.com/presentation-framework/presentation-framework",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Vitalii [Nayjest] Stepanenko",
            "email": "mail@vitaliy.in",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "symfony/property-access" : "^2.5",
        "nayjest/manipulator": "^3.0.1",
        "nayjest/tree": "^3",
        "nayjest/collection": "^2.1.2",
        "danielstjules/stringy": "^1.9|^2.2",
        "league/url": "^4|^3.3.5"
    },
    "require-dev": {
        "phpunit/phpunit": "4.6.*",
        "filp/whoops": "^1.1.7",
        "codeception/codeception": "2.0.*",
        "vlucas/phpdotenv" : "~1",
        "symfony/var-dumper": "~2",
        "ext-curl": "*"
    },
    "suggest": {
        "symfony/var-dumper": "Required for SymfonyVarDump component",
        "symfony/property-access" : "Probably will be used in future"
    },
    "autoload": {
        "psr-4": {
            "Presentation\\Framework\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Presentation\\Framework\\Test\\": "tests/phpunit",
            "Presentation\\Framework\\Demo\\": "tests/webapp"
        }
    },
    "support": {
        "email": "mail@vitaliy.in",
        "source": "https://github.com/presentation-framework/presentation-framework",
        "issues": "https://github.com/presentation-framework/presentation-framework/issues"
    },
    "minimum-stability": "stable"
}
